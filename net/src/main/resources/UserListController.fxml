<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.solncev.fxml.controller.UserListController" prefHeight="500.0" prefWidth="500.0">
    <children>
        <HBox id="HBox" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10"
              AnchorPane.topAnchor="10">
            <children>
                <Label text="Search user  by name:"/>
                <TextField fx:id="name" prefWidth="0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="search" prefWidth="0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>

        <VBox fx:id="users"
              AnchorPane.topAnchor="50" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
        </VBox>
    </children>
</AnchorPane>